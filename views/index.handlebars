<h1>Burger Baby</h1>

<h3>Saved Burgers</h3>

<ul>
  {{#each burgers}}
  	<li>
      {{#unless devoured}}
  	   <p>ID: {{this.id}}</p>
       <p>Wish: {{this.burger_name}}</p>
       <p>Devoured: {{this.devoured}}</p>
       <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">Devour!</button>
      {{/unless}}
  	</li>
  {{/each}}
</ul>

<h3>Devoured Burgers</h3>
<ul>
  {{#each burgers}}
  	<li>
      {{#if devoured}}
  	   <p>ID: {{this.id}}</p>
       <p>Wish: {{this.burger_name}}</p>
       <p>Devoured: {{this.devoured}}</p>
      {{/if}}
  	</li>
  {{/each}}
</ul>


<div>
  <form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
    <button type="submit">Submit</button>
  </div>
</div>

